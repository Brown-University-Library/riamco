<div class="row hero">
  <div class="theme-showcase">
    <div class="col-md-12">
      <div class="container" role="main">

        <div class="jumbotron">
          <img src="<%= image_url('RIAMCO_header_graphic.gif') %>"
            alt="RIAMCO">
        </div>
        <form id="search-homepage" action="<%= search_path() %>" name="search-home" role="search" method="GET">
          <div class="input-group input-group-lg">
            <input class="form-control" id="q" name="q" placeholder="Names, places, subjects, material types..." title="Enter text to search for" type="text">
            <div class="input-group-btn">
              <button type="submit" class="btn btn-default btn-lg sympl-search">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                <span aria-only="true">Search</span>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-12">
      <div class="container">
        <div id="homepage-link-row">
          <a href="TBD">Advanced search&hellip;</a>
        </div>
        <div class="jumbotron">
          <p>&nbsp;</p>
        </div>
      </div>
    </div>
  </div>
</div>


<script> 
  $(function() {
    debugger;
    $("#q").focus(); // Force focus to the search textbox
    $("#nav_home").addClass("active");
  });
</script>
